{
    "github-settings-header": {
        "type": "header",
        "description": "GitHub Notifications Settings"
    },
    "github-token": {
        "type": "entry",
        "default": "",
        "description": "Your GitHub personal access token",
        "tooltip": "Enter your GitHub personal access token here to allow the desklet to fetch your notifications."
    },
    "refresh-settings-header": {
        "type": "header",
        "description": "Refresh Settings"
    },
    "refresh-interval": {
        "type": "spinbutton",
        "default": 300,
        "min": 60,
        "max": 3600,
        "step": 30,
        "units": "seconds",
        "description": "Refresh Interval",
        "tooltip": "Interval in seconds at which to refresh the notifications"
    },
    "display-settings-header": {
        "type": "header",
        "description": "Display Settings"
    },
    "notification-display-mode": {
        "type": "combobox",
        "default": "count-only",
        "description": "Notification Display Mode",
        "tooltip": "Choose how notifications should be displayed",
        "options": {
            "Count Only": "count-only",
            "List Recent": "list-recent"
        }
    },
    "background-color": {
        "type": "colorchooser",
        "default": "rgba(0, 123, 255, 0.5)",
        "description": "Background color of the notification counter",
        "tooltip": "Choose a background color for the notification display"
    },
    "text-color": {
        "type": "colorchooser",
        "default": "rgba(255, 255, 255, 1.0)",
        "description": "Text color of the notification counter",
        "tooltip": "Choose a text color for the notification display"
    },
    "border-color": {
        "type": "colorchooser",
        "default": "#FFFFFF",  
        "description": "Border color of the container",
        "tooltip": "Choose a border color for the container"
    },
    "border-width": {
        "type": "spinbutton",
        "default": 2,
        "min": 0,
        "max": 10,
        "step": 1,
        "units": "pixels",
        "description": "Border width of the container",
        "tooltip": "Set the border width of the container"
    },
    "customization-settings-header": {
        "type": "header",
        "description": "Customization Settings"
    },
    "notification-count": {
        "type": "spinbutton",
        "default": 3,
        "min": 1,
        "max": 10,
        "step": 1,
        "units": "notifications",
        "description": "Number of notifications to display",
        "tooltip": "Set the number of notifications to display at one time"
    },
    "scale-size": {
        "type": "scale",
        "default": 1,
        "min": 0.5,
        "max": 2,
        "step": 0.1,
        "description": "Desklet size scale",
        "tooltip": "Adjust the scale of the desklet size"
    }
}
